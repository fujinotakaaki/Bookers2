
<!DOCTYPE html>
<html>
<head>
  <title>Task3</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://kit.fontawesome.com/28f08caf63.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="example.css">
</head>

<header>
  <div class="container">
    <div class="row">

      <div class="col-md-offset-1 col-md-10 col-md-offset-1">
        <h1><i class="fas fa-heart"></i>Bookers<i class="far fa-heart"></i></h1>
        <nav>
          <ul>
            <% if user_signed_in? then %>
            <!--ログイン状態ならば-->
            <li>
              <%= link_to user_path(current_user) do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
              <% end %>
            </li>
            <li>
              <%= link_to  books_path do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> logout
              <% end %>
            </li>
            <% else %>
            <!--未認証時-->
            <li>
              <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
              <% end %>
            </li>
            <li>
              <%= link_to home_about_path do %>
              <span class="glyphicon glyphicon-link" aria-hidden="true"></span> About
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Sign up
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> login
              <% end %>
            </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>

<body>
  <%= yield %>
</body>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-8 col-md-4">
        <span>© CopyRight Infratop.inc</span>
      </div>
    </div>
  </div>
</footer>
</html>
