<% if not notice.nil? then%>
<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-11"><%= notice %></div>
  </div>
</div>
<% end %>

<!--body-->
<div class="container">
  <div class="row">

    <!--Plofile_section-->
    <!--ユーザープロフィール部-->
    <div class="col-xs-3">
      <div class=""><%= render 'users/profile', person: @book.user %></div>
      <!--ユーザープロフィール部-->

      <!--新規投稿-->
      <div class=""><%= render 'books/new', book_new: @book_new %></div>
      <!--新規投稿-->
    </div>
    <!--Plofile_section-->

    <!--リスト部-->
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th class='favorite-space'></th>
          <th class='comment-count'></th>
          <th class='btn-space'></th>
        </tr>
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
            <%= attachment_image_tag @book.user, :profile_image, size:'100x100', format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %><br>
            <p class="deatails-text"><%= @book.user.name %></p>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td  style='width: 300px;'><%= @book.body %></td>
          <td>
            <!--お気に入り登録しているか？-->
            <% if @book.favorites.find_by( user_id: current_user.id ).nil? then %>
            <!--NO-->
            <%= link_to book_favorite_path( @book ), method: :post do %><i class="far fa-heart"></i><%= @book.favorites.count %><% end %>
            <% else %>
            <!--YES-->
            <%= link_to book_favorite_path( @book ), method: :delete do %><i class="fas fa-heart"></i><%= @book.favorites.count %><% end %>
            <% end %>
          </td>
          <td>コメント数：<%= @book.book_comments.count %></td>
          <td>
            <% if current_user.id == @book.user_id then %>
            <ul>
              <li><%= link_to "Edit", edit_book_path(@book), class: "edit-btn" %></li>
              <li><%= link_to "Destroy", book_path(@book), method: :delete, class: "destroy-btn", "data-confirm" => "本当に消しますか？" %></li>
            </ul>
            <% end %>
          </td>
        </tr>
      </table>

      <h2>BookComment index</h2>
      <table>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% @book.book_comments.each do | book_comment | %>
        <tr>
          <td><%= attachment_image_tag book_comment.user, :profile_image, size:'30x30', format: 'jpeg', fallback: "no_image.jpg", size:'30x30' %></td>
          <td><%= book_comment.comment %></td>
          <td>
            <% if book_comment.user_id == current_user.id then %>
            <%= link_to 'Destroy', book_book_comment_path( book_comment.id ), method: :delete, class: "destroy-btn" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>

      <div id='book-comments-form'>
        <% if @book_comment.errors.any? %>
        <%= render 'books/show_error_index', unit: @book_comment %>
        <% end %>

        <%= form_for( @book_comment, url: book_book_comment_path(@book) ) do |f| %>
        <%= f.text_area :comment %>
        <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
    <!--リスト部-->

  </div>
</div>
