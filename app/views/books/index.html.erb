<% if @book_new.errors.any? then %>
<%= render 'books/show_error_index', unit: @book_new %>
<% end %>

<!--body-->
<div class="container">
  <div class="row">
    <!--Plofile_section-->
    <div class="col-xs-3">
      <!--ユーザープロフィール部-->
      <div class=""><%= render 'users/profile', person: current_user %></div>
      <!--新規投稿-->
      <div class=""><%= render 'books/new', book_new: @book_new %></div>
    </div>
    <!--リスト部-->
    <div class="col-xs-9">
      <h2>Books</h2>
      <table>
        <tr>
          <th></th>
          <th>Title</th>
          <th class='opiniopn-space'>Opinion</th>
          <th class='favorite-space'></th>
          <th class='comment-count'></th>
        </tr>
        <% @books.each do |book| %>
        <%= render 'books/index_partial', book: book %>
        <% end %>
      </table>
    </div>
  </div>
</div>
